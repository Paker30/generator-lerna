{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "This is the begining of a great project",
  "scripts": {
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "publish": "lerna publish --conventional-commits --message 'chore: publish'"
  },
  "author": "<%= author %>",
  "license": "<%= license %>",
  "repository": {
    "type": "git",
    "url": "git+<%= repo %>"
  },
  "bugs": {
    "url": "<%= bugs %>/issues"
  },
  "homepage": "<%= homepage %>#readme",
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^4.18.2",
    "husky": "^0.14.3",
    "lerna": "^2.10.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
